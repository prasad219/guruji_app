<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="49dp"
                    android:layout_marginTop="20dp"

                    android:layout_height="49dp"
                    android:forceHasOverlappingRendering="true"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                    <TextView
                        android:id="@+id/pujaprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robobold"
                        android:text="Confirm booking"
                        android:textAllCaps="true"

                        android:textSize="40sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:id="@+id/BookingName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robobold"
                        android:text="Puja Info"
                        android:textAllCaps="true"

                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/BookingPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/robobold"
                        android:text="5000"
                        android:textAllCaps="true"
                        android:textColor="@color/green"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/BookingDetails"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/BookingName"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/monlight"
                        android:text="Explore which pujas are popular right now "

                        android:textSize="15sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/pujaimpoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robobold"
                        android:text="Select a date"
                        android:textAllCaps="true"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/dateAvailability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pujaimpoTitle"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/robobold"
                        android:text="Select a date to see Availability"

                        android:textSize="15sp" />

                    <CalendarView
                        android:id="@+id/CalenderView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/dateAvailability"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/calenderbg"

                         />

                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/EventTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robobold"
                        android:text="Select a Time"
                        android:textAllCaps="true"
                        android:layout_below="@+id/CalenderView"
                        android:visibility="gone"

                        android:textSize="20sp" />

                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/EventTime"
                        android:layout_marginTop="15dp"
                        android:amPmTextColor="#FFFFFF"
                        android:visibility="gone"
                        android:background="@drawable/calenderbg"
                        android:id="@+id/eventimepicker"

                        android:numbersBackgroundColor="#FFFFFF"
                        android:numbersInnerTextColor="#FFFFFF"
                        android:numbersTextColor="#FFFFFF"
                        android:timePickerMode="spinner" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/Finaldatetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robobold"
                        android:text="@string/date_time"
                        android:textAllCaps="true"

                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/Finaldate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robolight"
                        android:layout_toRightOf="@+id/Finaldatetime"
                        android:text="Date"
                        android:layout_marginLeft="10dp"
                        android:textAllCaps="true"

                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/Finaltime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/robolight"
                        android:layout_toRightOf="@+id/Finaldate"
                        android:text="Time"
                        android:textAllCaps="true"

                        android:textSize="18sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:layout_margin="20dp"
                        android:text="Confirm Booking"
                        android:layout_below="@+id/Finaldatetime"
                        android:fontFamily="@font/robobold"
                        android:id="@+id/bookingconfirm"/>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>




